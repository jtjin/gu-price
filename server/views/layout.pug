body
    header.main_header
        .container
            .box
                a.title(href='/')
                    img.logo(src='/static/imgs/logo.png')
                    p GU 搜尋
            .box
                input#search_header.search(type='text' placeholder=' 輸入商品關鍵字 ...')
                button.search_btn(onclick="headerSearchBtn()") →
            .box.nav_bar
                img#menu_img.menu(src='/static/imgs/menu.png')
                ul#menu_list
                    a(href='/')
                        li 首頁
                    a(href='/men')
                        li 男裝
                    a(href='/women')
                        li 女裝
                    a(href='/kids')
                        li 童裝
            .box.member_box
                button#member_btn.member_btn
                    img#member_logo.member_logo
        #profile_modal.profile_ctn_bg
            .profile_ctn
                #profile_close.profile_close
                    p x
                #profile_name.profile_name
                a(href="/profile")
                    p 個人資料
                a(href="/profile")
                    p 收藏清單
                .logout
                p#logoutBtn 登出

    #member_modal.member_modal
        .modal_content
            #modal_close.modal_close
                p x
            .modal_container
                #nav_signup.nav.signup 註冊帳號
                #nav_login.nav.login 會員登入
                //- Signup Form
                form#signup_form.form.signup-form
                    input#signup_name.input(type='text' name='name' placeholder='用戶名稱')
                    br
                    input#signup_email.input(type='email' name='email' placeholder='Email 信箱')
                    br
                    input#signup_password.input(type='password' name='password' placeholder='密碼')
                    br
                    button#signupBtn.btn 註冊
                //- Login Form
                form#login_form.form.login-form
                    input#login_email.input(type='email' name='email' placeholder='Email 信箱')
                    br
                    input#login_password.input(type='password' name='password' placeholder='密碼')
                    br
                    button#loginBtn.btn 登入
                button.google_btn(onclick="GoogleLogin()")
                    img.google_icon(src="/static/imgs/google.png")
                    p 使用 Google 登入
                button.fb_btn(onclick="FacebookLogin()")
                    img.fb_icon(src="/static/imgs/fb.png")
                    p 使用 Facebook 登入
    block content
    #comparsion_arrow.comparsion_arrow
        img(src="/static/imgs/compare_arrow.png")
    #comparison_bg.comparison_bg
        #comparsion_close.comparsion_close
            p x
        .comparison
            .comparsion_title
                h3 產品比較表
                p 產品已加入比較。至多可選取 4 項產品或直接查看比較結果。
            .comparsion_items
                ul#comparsion_ul.comparsion_ul
            a#go_to_compare.go_to_compare 立即比較
    button#backTop.toTop-arrow
        img(src="/static/imgs/backTop.png")
    footer.main_footer
        .container_footer
            .box_footer
                img.logo_footer(src='/static/imgs/logo_footer.png')
                .title_footer
                    h3 GU 搜尋
                    h4 GU 價格查詢比價網
