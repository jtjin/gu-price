body
    header.main_header
        .container
            .box
                a.title(href='/')
                    img.logo(src='/static/imgs/logo.png')
                    p GU 搜尋
            .box
                input#search_header.search(type='text' placeholder=' 輸入商品關鍵字 ...')
                button.search_btn(onclick="headerSearchBtn()") →
            .box.nav_bar
                img#menu_img.menu(src='/static/imgs/menu.png')
                ul#menu_list
                    li
                        a(href='/') 首頁
                    li
                        a(href='#') 男裝
                    li
                        a(href='#') 女裝
                    li
                        a(href='#') 童裝
            .box.member_box
                button#member_btn.member_btn
                    img.member_logo(src='/static/imgs/member.png')

    #member_modal.member_modal
        .modal_content
            .modal_container
                button.google_btn(onclick="Google_login()")
                    img.google_icon(src="/static/imgs/google.png")
                    p Log in with Google
                button.github_btn(onclick="GitHub_login()")
                    img.github_icon(src="/static/imgs/github.png")
                    p Log in with GitHub
                button.fb_btn(onclick="FB_login()")
                    img.fb_icon(src="/static/imgs/fb.png")
                    p Log in with Facebook

    block content

    footer.main_footer
        .container_footer
            .box_footer
                img.logo_footer(src='/static/imgs/logo_footer.png')
                .title_footer
                    h3 GU 搜尋
